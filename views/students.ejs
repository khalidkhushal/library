<%-include ('header')-%>
    <h2>Students</h2>
    <div id="student-table">

        <div id="table">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">ID </th>
                        <th scope="col">First Name </th>
                        <th scope="col">Last Name</th>
                    </tr>
                </thead>
                <tbody>

                    <% for( let i = 0; i < student.length; i++ ) { %>
                        <tr>
                            <th scope="row">
                                <%= student[i].id %>
                            </th>
                            <td>
                                <%= student[i].First_name %>
                            </td>
                            <td>
                                <%= student[i].Last_name %>
                            </td>
                            <td>
                                <a href="/update_student?id=<%= student[i].id  %>" class='btn border-shadow update'><i class="far fa-edit" style="font-size:large; color: black;"></i>
                                </a>


                            </td>
                        </tr>
                        <% } %>

                </tbody>
            </table>
        </div>
    </div>

    <%-include ('footer')-%>